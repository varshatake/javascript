// if Boolean is used,  true is 1,  false is 0;

var answer;
answer = '4' - true;
console.log(`If boolean to number '4' - true: ${answer}`);

answer = 4 + true;
console.log(`If boolean to number 4 + true: ${answer}`);

answer = 4 + false;
console.log(`If boolean to number 4 + false: ${answer}`);

answer = 4 - false;
console.log(`If boolean to number 4 - false: ${answer}`);

answer = '4' - false;
console.log(`If boolean to number '4' - false: ${answer}`);



